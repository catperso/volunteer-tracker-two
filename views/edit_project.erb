<h1><strong><%= @project.title %></strong></h1>

<h3><em>Volunteers</em></h3>
<% if @project.volunteers.length > 0 %>
  <ul>
    <% @project.volunteers.each do |volunteer| %>
      <li><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p><em>This project has no volunteers yet</em></p>
<% end %>
<br>
<form action="/projects/<%= @project.id %>/volunteers" method="post">
  <input type="text" class="form-control" name="new_volunteer" id="new_volunteer" placeholder="Add a new volunteer for <%= @project.title %>!" required>
  <br>
  <button type="submit" class="btn btn-success">Add volunteer!</button>
</form>
<br>
<form action="/projects/<%= @project.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="project_update" name="project_update" type="text" class="form-control" placeholder="Instead of: '<%= @project.title %>'..." required>
  <br>
  <button type="submit" class="btn btn-info">Rename project!</button>
</form>
<hr>
<a href="/projects/<%= @project.id %>"><button class="btn btn-warning">Stop editing this project</button></a>
<a href="/projects"><button class="btn btn-primary">Return to all projects</button></a>
<br>
<br>
<form action="/projects/<%= @project.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Remove this project and all its volunteers?</button>
</form>